<Window x:Class="WpfEmailScraper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Email Scraper" Height="340.071" Width="341.312" Icon="Icon1.ico" ResizeMode="CanMinimize" Cursor="Pen">
    <Grid>
        <TextBox x:Name="URLTextBox" HorizontalAlignment="Left" Height="23" Margin="64,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" GotFocus="URLTextBox_GotFocus" Cursor="Cross"/>
        <Button x:Name="ScrapeEmailsBtn" Content="Scrape Emails" HorizontalAlignment="Left" Margin="21,63,0,0" VerticalAlignment="Top" Width="290" Click="ScrapeEmailsBtn_Click" Height="36" IsDefault="True"/>
        <ListBox x:Name="ResultsListBox" HorizontalAlignment="Left" Height="178" Margin="21,116,0,0" VerticalAlignment="Top" Width="290"/>
        <Label Content="URL" HorizontalAlignment="Left" Margin="26,19,0,0" VerticalAlignment="Top" Width="33" RenderTransformOrigin="-0.038,0.441"/>
        <Button x:Name="btnClear" Content="Clear" HorizontalAlignment="Left" Margin="272,23,0,0" VerticalAlignment="Top" Width="39" Click="btnClear_Click"/>

    </Grid>
</Window>
